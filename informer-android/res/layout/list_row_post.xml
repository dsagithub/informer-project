<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C9C9C9"
    android:orientation="vertical"
    android:paddingBottom="5dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="5dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_corners"
        android:orientation="vertical"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:layout_weight="0.5"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#464646" />

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip" >

            <TextView
                android:id="@+id/tvComentarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="left"
                android:text="@string/comentarios"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F4EEDE"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_como_texto"
                android:onClick="megusta"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:src="@drawable/megusta" />

            <TextView
                android:id="@+id/tvMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_como_texto"
                android:onClick="megusta"
                android:paddingBottom="15dip"
                android:paddingLeft="5dip"
                android:paddingRight="10dip"
                android:paddingTop="15dip"
                android:text="@string/megusta"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_como_texto"
                android:onClick="nomegusta"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:src="@drawable/nomegusta" />

            <TextView
                android:id="@+id/tvNoMeGusta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_como_texto"
                android:gravity="left"
                android:onClick="nomegusta"
                android:paddingBottom="15dip"
                android:paddingLeft="5dip"
                android:paddingRight="10dip"
                android:paddingTop="15dip"
                android:text="@string/nomegusta"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/comentario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_como_texto"
                android:onClick="comentar"
                android:paddingBottom="15dip"
                android:paddingTop="15dip"
                android:src="@drawable/comentar" />

            <TextView
                android:id="@+id/tvComentar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_como_texto"
                android:gravity="left"
                android:onClick="comentar"
                android:paddingBottom="15dip"
                android:paddingLeft="5dip"
                android:paddingTop="15dip"
                android:text="@string/comentar"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>